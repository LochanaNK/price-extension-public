{
  "manifest_version": 3,
  "name": "Price Comparator",
  "version": "1.0",
  "description": "Compare product prices across AliExpress and Daraz",
  "action": {
    "default_popup": "src/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "worker_service": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "permissions": ["storage", "activeTab", "scripting","storage"],
  "host_permissions": ["https://price-extension.onrender.com/*", "http://127.0.0.1:8080/*","http://127.0.0.1:8000/*"]
}
